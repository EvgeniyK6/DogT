@model DogT.ViewModels.RegisterViewModel
@using DogT.Data;

@{
    ViewData["Title"] = "Реєстрація";
}

<h3>Реєстрація</h3>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Емейл</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Підтвердження паролю</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <label asp-for="Name">Ім'я</label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Surname">Прізвище</label><br />
            <input asp-for="Surname" />
            <span asp-validation-for="Surname" />
        </div>
        <div>
            <label asp-for="Position">Обери позицію</label><br />
            <select asp-for="Position" asp-items="Html.GetEnumSelectList<Position>()">
                <option>Позиція...</option>
            </select>
            <span asp-validation-for="Position" />
        </div>
       
        <div>
            <input type="submit" value="Реєстрація" />
        </div>
    </div>
</form>