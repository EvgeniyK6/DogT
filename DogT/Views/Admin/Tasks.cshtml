@model IEnumerable<DogT.Models.TrainingTask>

@{
    ViewData["Title"] = "Завдання";
    Layout = "_Admin";
}

<div class="dog_menu">
    <a asp-action="AddTask" class="dog">
        <div class="dog_img">
            <i class="fas fa-plus empty_dog_img"></i>
        </div>
        <h6 class="dog_title">Додати завдання</h6>
    </a>
</div>

    <div class="trainings">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Кінолог</th>
                    <th scope="col">Собака</th>
                    <th scope="col">Зміст</th>
                    <th scope="col">Дата початку</th>
                    <th scope="col">Крайній термін</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td>Завдання відсутні</td>
                    </tr>
                }
                else
                {

                    var num = 1;

                    foreach (var task in Model)
                    {
                        <tr>
                            <th scope="row">@num</th>
                            <td>@task.DogHandler.Name @task.DogHandler.Surname</td>
                            <td>@task.Dog.Name</td>
                            <td>@task.Context</td>
                            <td>@task.Date</td>
                            <td>@task.Deadline</td>
                        </tr>
                        num++;
                    }
                }
            </tbody>
        </table>
    </div>
